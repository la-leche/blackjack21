<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Slider?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="blackjack_tutorial.SettingsController" stylesheets="@global.css">
    <children>
        <Label text="Settings View" />
        <Slider fx:id="slider" min="1" max="3" majorTickUnit="1" minorTickCount="0" snapToTicks="true" styleClass="slider" stylesheets="@global.css"/>
        <Button fx:id="settingsButton" text="- Back" onAction="#switchTostartScreen" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
